    <script>
    document.addEventListener('DOMContentLoaded', function() {
        let constellationTimer, shortfilmTimer, countdownInterval;
        let activeScreenId = 'countdown-screen';
        let visitedWorlds = new Set();

        // **CONFIGURACIÓN DE FECHA**
        // Para cambiar la fecha objetivo, modifica la siguiente línea:
        // Ejemplo para 5 de octubre de 2025: new Date('2025-10-05T00:00:00')
        const targetDate = new Date('2025-10-05T00:00:00');

        const memories = [
            { caption: 'El primer hola...' },
            { caption: 'Esa primera cita...' },
            { caption: 'Nuestro primer viaje...' },
            { caption: 'Las risas compartidas...' },
            { caption: 'El apoyo incondicional...' },
            { caption: 'Ese secreto nuestro...' },
            { caption: 'La noche que bailamos...' },
            { caption: 'Cuando supimos que era para siempre...' },
            { caption: 'Nuestros sueños juntos...' },
            { caption: 'Superando obstáculos...' },
            { caption: 'Cada pequeño detalle...' },
            { caption: 'Y el comienzo de todo lo demás.' }
        ];

        const shortfilmSlides = [
            { img: 'https://picsum.photos/seed/love1/1920/1080', caption: 'Donde todo comenzó...' },
            { img: 'https://picsum.photos/seed/love2/1920/1080', caption: 'Aventuras inolvidables.' },
            { img: 'https://picsum.photos/seed/love3/1920/1080', caption: 'Momentos de paz.' },
            { img: 'https://picsum.photos/seed/love4/1920/1080', caption: 'Risas que resuenan.' },
            { img: 'https://picsum.photos/seed/love5/1920/1080', caption: 'Mirando hacia el futuro, juntos.' }
        ];

        // Crear estrellas de fondo para countdown
        const countdownStarsContainer = document.getElementById('countdown-stars');
        for (let i = 0; i < 100; i++) {
            const star = document.createElement('div');
            star.style.position = 'absolute';
            star.style.background = 'white';
            star.style.borderRadius = '50%';
            star.style.left = Math.random() * 100 + '%';
            star.style.top = Math.random() * 100 + '%';
            const size = Math.random() * 2 + 1;
            star.style.width = size + 'px';
            star.style.height = size + 'px';
            star.style.animation = `twinkle-bg ${Math.random() * 2 + 2}s infinite ease-in-out alternate`;
            star.style.animationDelay = Math.random() * 3 + 's';
            star.style.opacity = Math.random() * 0.5 + 0.3;
            countdownStarsContainer.appendChild(star);
        }

        // Función de cuenta regresiva
        function updateCountdown() {
            const now = new Date().getTime();
            const distance = targetDate - now;

            if (distance < 0) {
                clearInterval(countdownInterval);
                document.getElementById('days').textContent = '0';
                document.getElementById('hours').textContent = '0';
                document.getElementById('minutes').textContent = '0';
                document.getElementById('seconds').textContent = '0';
                setTimeout(() => {
                    showScreen('start-screen');
                }, 500);
                return;
            }

            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);

            document.getElementById('days').textContent = days;
            document.getElementById('hours').textContent = hours;
            document.getElementById('minutes').textContent = minutes;
            document.getElementById('seconds').textContent = seconds;
        }

        // Iniciar cuenta regresiva
        updateCountdown();
        countdownInterval = setInterval(updateCountdown, 1000);

        // Click en pantalla de inicio
        document.getElementById('start-screen').addEventListener('click', () => {
            document.getElementById('music-player').style.display = 'flex';
            showScreen('universe-screen');
        });

        // Crear estrellas de fondo para universo
        const universeStarsContainer = document.getElementById('universe-stars');
        for (let i = 0; i < 150; i++) {
            const star = document.createElement('div');
            star.style.position = 'absolute';
            star.style.background = 'white';
            star.style.borderRadius = '50%';
            star.style.left = Math.random() * 100 + '%';
            star.style.top = Math.random() * 100 + '%';
            const size = Math.random() * 2 + 0.5;
            star.style.width = size + 'px';
            star.style.height = size + 'px';
            star.style.animation = `twinkle-bg ${Math.random() * 3 + 2}s infinite ease-in-out alternate`;
            star.style.animationDelay = Math.random() * 5 + 's';
            star.style.opacity = Math.random() * 0.4 + 0.2;
            universeStarsContainer.appendChild(star);
        }

        // Navegación por mundos
        document.querySelectorAll('.world').forEach(world => {
            world.addEventListener('click', () => {
                const worldId = world.getAttribute('data-world');
                visitedWorlds.add(worldId);
                showScreen(worldId + '-screen');
            });
        });

        // Botones de volver - BUG FIX: Removido la condición que causaba ir siempre a final-screen
        document.querySelectorAll('.back-button').forEach(button => {
            button.addEventListener('click', () => {
                const target = button.getAttribute('data-target');
                showScreen(target);
            });
        });

        // Botones pantalla final
        document.getElementById('view-constellation-button').addEventListener('click', () => {
            showScreen('constellation-screen', { isReview: true });
        });
        document.getElementById('back-to-universe-button').addEventListener('click', () => {
            showScreen('universe-screen');
        });

        function showScreen(targetId, options = {}) {
            const currentScreen = document.getElementById(activeScreenId);
            const targetScreen = document.getElementById(targetId);
            
            if (currentScreen && currentScreen.id !== targetId) {
                currentScreen.classList.remove('visible');
                setTimeout(() => {
                    currentScreen.classList.add('hidden');
                    currentScreen.classList.remove('on-top');
                }, 1000);
            }

            targetScreen.classList.remove('hidden');
            if (targetId === 'final-screen' || targetId === 'start-screen' || targetId === 'countdown-screen') {
                targetScreen.classList.add('on-top');
            }
            setTimeout(() => targetScreen.classList.add('visible'), 50);
            
            activeScreenId = targetId;
            stopConstellation();
            stopShortfilmAnimation();

            if (targetId === 'constellation-screen') {
                if (options.isReview) {
                    drawCompletedConstellation();
                } else {
                    startConstellationAnimation();
                }
            } else if (targetId === 'shortfilm-screen') {
                startShortfilmAnimation();
            }
        }

        function getStarCoords() {
            const svg = document.getElementById('constellation-svg');
            const { width, height } = svg.getBoundingClientRect();
            const heartScale = Math.min(width, height) * 0.4;
            const offsetX = width / 2;
            const offsetY = height / 2;

            return Array.from({length: 12}, (_, i) => {
                const t = 2 * Math.PI * i / 11;
                const x = 16 * Math.pow(Math.sin(t), 3);
                const y = 13 * Math.cos(t) - 5 * Math.cos(2*t) - 2 * Math.cos(3*t) - Math.cos(4*t);
                return { x: offsetX + x * (heartScale / 25), y: offsetY - y * (heartScale / 25) };
            });
        }

        function generateBackgroundStars(container, count) {
            const bgContainer = document.getElementById('constellation-container');
            bgContainer.innerHTML = '';
            for (let i = 0; i < count; i++) {
                const star = document.createElement('div');
                star.className = 'background-star';
                star.style.left = `${Math.random() * 100}%`;
                star.style.top = `${Math.random() * 100}%`;
                const size = Math.random() * 2 + 0.5;
                star.style.width = `${size}px`;
                star.style.height = `${size}px`;
                star.style.animationDelay = `${Math.random() * 5}s`;
                star.style.animationDuration = `${Math.random() * 5 + 3}s`;
                bgContainer.appendChild(star);
            }
        }

        function drawCompletedConstellation() {
            const screen = document.getElementById('constellation-screen');
            const svg = screen.querySelector('#constellation-svg');
            const captionEl = screen.querySelector('#memory-caption');
            
            svg.innerHTML = '';
            captionEl.textContent = '';
            captionEl.classList.remove('visible');
            
            generateBackgroundStars(document.getElementById('constellation-container'), 150);
            const starCoords = getStarCoords();
            
            starCoords.forEach((coord, i) => {
                const star = document.createElementNS('http://www.w3.org/2000/svg', 'circle');
                star.setAttribute('class', 'star visible');
                star.setAttribute('cx', coord.x);
                star.setAttribute('cy', coord.y);
                star.setAttribute('r', 6);
                svg.appendChild(star);

                const nextCoord = starCoords[(i + 1) % 11];
                const line = document.createElementNS('http://www.w3.org/2000/svg', 'line');
                line.setAttribute('class', 'constellation-line');
                line.setAttribute('x1', coord.x);
                line.setAttribute('y1', coord.y);
                line.setAttribute('x2', nextCoord.x);
                line.setAttribute('y2', nextCoord.y);
                line.style.animation = 'none';
                line.style.strokeDashoffset = '0';
                svg.insertBefore(line, svg.firstChild);
            });
        }

        function startConstellationAnimation() {
            const screen = document.getElementById('constellation-screen');
            const svg = screen.querySelector('#constellation-svg');
            const captionEl = screen.querySelector('#memory-caption');
            svg.innerHTML = '';
            captionEl.textContent = '';
            captionEl.classList.remove('visible');
            
            generateBackgroundStars(document.getElementById('constellation-container'), 150);
            const starCoords = getStarCoords();
            let currentIndex = 0;

            function playNext() {
                if (currentIndex >= memories.length) {
                    const line = document.createElementNS('http://www.w3.org/2000/svg', 'line');
                    line.setAttribute('class', 'constellation-line');
                    line.setAttribute('x1', starCoords[memories.length - 1].x);
                    line.setAttribute('y1', starCoords[memories.length - 1].y);
                    line.setAttribute('x2', starCoords[0].x);
                    line.setAttribute('y2', starCoords[0].y);
                    svg.insertBefore(line, svg.firstChild);

                    setTimeout(() => showScreen('final-screen'), 3000);
                    return;
                }
                
                captionEl.textContent = memories[currentIndex].caption;
                captionEl.classList.add('visible');
                
                const star = document.createElementNS('http://www.w3.org/2000/svg', 'circle');
                star.setAttribute('class', 'star');
                star.setAttribute('cx', starCoords[currentIndex].x);
                star.setAttribute('cy', starCoords[currentIndex].y);
                star.setAttribute('r', 6);
                svg.appendChild(star);
                setTimeout(() => star.classList.add('visible'), 50);
                
                if (currentIndex > 0) {
                    const line = document.createElementNS('http://www.w3.org/2000/svg', 'line');
                    line.setAttribute('class', 'constellation-line');
                    line.setAttribute('x1', starCoords[currentIndex-1].x);
                    line.setAttribute('y1', starCoords[currentIndex-1].y);
                    line.setAttribute('x2', starCoords[currentIndex].x);
                    line.setAttribute('y2', starCoords[currentIndex].y);
                    svg.insertBefore(line, svg.firstChild);
                }

                const captionVisibleTime = 3000;
                const fadeOutTime = 1000;
                
                constellationTimer = setTimeout(() => {
                    captionEl.classList.remove('visible');
                    constellationTimer = setTimeout(() => {
                        currentIndex++;
                        playNext();
                    }, fadeOutTime);
                }, captionVisibleTime);
            }
            playNext();
        }

        function stopConstellation() {
            clearTimeout(constellationTimer);
            const container = document.getElementById('constellation-container');
            if(container) container.innerHTML = '';
            const svg = document.getElementById('constellation-svg');
            if (svg) svg.innerHTML = '';
            const captionEl = document.getElementById('memory-caption');
            if (captionEl) {
                captionEl.textContent = '';
                captionEl.classList.remove('visible');
            }
        }

        function startShortfilmAnimation() {
            const container = document.getElementById('shortfilm-container');
            const captionEl = document.getElementById('shortfilm-caption');
            if (!container || !captionEl) return;

            let currentIndex = 0;
            let currentSlide = null;

            function showSlide() {
                if (currentIndex >= shortfilmSlides.length) {
                    currentIndex = 0;
                }

                const slideData = shortfilmSlides[currentIndex];
                const slide = document.createElement('div');
                slide.className = 'shortfilm-slide';
                slide.style.backgroundImage = `url(${slideData.img})`;
                container.appendChild(slide);
                
                setTimeout(() => {
                    slide.classList.add('visible');
                    captionEl.textContent = slideData.caption;
                    captionEl.classList.add('visible');
                }, 100);

                if (currentSlide) {
                    currentSlide.remove();
                }

                currentSlide = slide;
                currentIndex++;

                shortfilmTimer = setTimeout(() => {
                    captionEl.classList.remove('visible');
                    setTimeout(showSlide, 500);
                }, 8000);
            }

            showSlide();
        }

        function stopShortfilmAnimation() {
            clearTimeout(shortfilmTimer);
            const container = document.getElementById('shortfilm-container');
            if (container) container.innerHTML = '';
            const captionEl = document.getElementById('shortfilm-caption');
            if (captionEl) {
                captionEl.textContent = '';
                captionEl.classList.remove('visible');
            }
        }
    });
    </script>
</body>
</html>
